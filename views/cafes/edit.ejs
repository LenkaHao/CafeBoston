<% include ../partials/header %>
    
<div class="row">
    <h1 class="form-heading">Edit <%= cafe.name %></h1>
    
    <div cass="form-content">
        <form action="/cafes/<%= cafe._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="user[username]" value="<%= user.username %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="user[email]" value="<%= user.email %>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/cafes">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>
